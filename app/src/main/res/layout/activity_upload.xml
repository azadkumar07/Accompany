<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/cc"
        tools:context=".upload">


    <EditText
            android:id="@+id/commentText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="73dp"
            app:layout_constraintEnd_toEndOf="parent" android:hint="Description"/>

    <ImageView
            android:id="@+id/img"
            android:layout_width="288dp"
            android:layout_height="185dp"
            android:layout_marginEnd="55dp"
            android:layout_marginStart="55dp"
            android:onClick="selectImage"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="13dp" app:srcCompat="@drawable/selectimage"/>

    <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="upload"
            android:text="Upload"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="136dp"
            android:layout_marginBottom="76dp"
            app:layout_constraintEnd_toEndOf="parent" android:background="@color/colorAccent"/>

</android.support.constraint.ConstraintLayout>